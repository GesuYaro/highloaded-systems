<?xml version="1.0" encoding="utf-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="202402201902" author="Semyon">

        <createTable tableName="deadlines">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_deadlines"/>
            </column>
            <column name="group_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="test_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="deadline" type="java.sql.types.timestamp_with_timezone">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="deadlines" baseColumnNames="test_id"
                                 constraintName="fk_deadlines_tests" referencedTableName="tests" referencedColumnNames="id"
                                 onUpdate="CASCADE" onDelete="CASCADE"/>

        <addForeignKeyConstraint baseTableName="deadlines" baseColumnNames="test_id"
                                 constraintName="fk_deadlines_tests" referencedTableName="tests" referencedColumnNames="id"
                                 onUpdate="CASCADE" onDelete="CASCADE"/>

    </changeSet>
</databaseChangeLog>
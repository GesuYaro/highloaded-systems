<?xml version="1.0" encoding="utf-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="202402072119" author="Semyon">

        <createTable tableName="questions">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_questions"/>
            </column>
            <column name="description" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="test_id" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="subjects">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_subjects"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="owner_id" type="UUID">
                <constraints nullable="false" unique="false"/>
            </column>
        </createTable>

        <createTable tableName="tests">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_tests"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="subject_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="duration" type="interval">
                <constraints nullable="false"/>
            </column>
            <column name="is_open" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="teacher_id" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="answers">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_answers"/>
            </column>
            <column name="description" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="question_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="is_correct" type="boolean">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="test_results">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_test_results"/>
            </column>
            <column name="student_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="deadline_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="result" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="started_at" type="java.sql.types.timestamp_with_timezone">
                <constraints nullable="false"/>
            </column>
            <column name="finished_at" type="java.sql.types.timestamp_with_timezone">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="answers" baseColumnNames="question_id"
                                 constraintName="fk_answers_questions" referencedTableName="questions" referencedColumnNames="id"
                                 onUpdate="CASCADE" onDelete="CASCADE"/>


        <addForeignKeyConstraint baseTableName="questions" baseColumnNames="test_id"
                                 constraintName="fk_questions_tests" referencedTableName="tests" referencedColumnNames="id"
                                 onUpdate="CASCADE" onDelete="CASCADE"/>

        <addForeignKeyConstraint baseTableName="tests" baseColumnNames="subject_id"
                                 constraintName="fk_tests_subjects" referencedTableName="subjects" referencedColumnNames="id"
                                 onUpdate="CASCADE" onDelete="CASCADE"/>

        <addForeignKeyConstraint baseTableName="tests" baseColumnNames="teacher_id"
                                 constraintName="fk_tests_teachers_info" referencedTableName="teachers_info" referencedColumnNames="id"
                                 onUpdate="CASCADE" onDelete="CASCADE"/>

        <addForeignKeyConstraint baseTableName="tests_results" baseColumnNames="student_id"
                                 constraintName="fk_tests_results_students_info" referencedTableName="students_info" referencedColumnNames="id"
                                 onUpdate="CASCADE" onDelete="CASCADE"/>

        <addForeignKeyConstraint baseTableName="tests_results" baseColumnNames="test_id"
                                 constraintName="fk_tests_results_tests" referencedTableName="tests" referencedColumnNames="id"
                                 onUpdate="CASCADE" onDelete="CASCADE"/>

    </changeSet>
</databaseChangeLog>